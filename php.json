{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": [
    "Dependencies 📦",
    "PHP 🐘"
  ],
  "packageRules": [
    {
      "managers": ["composer"],
      "rangeStrategy": "in-range-only"
    },
    {
      "managers": ["composer"],
      "rangeStrategy": "bump"
    },
    {
      "managers": ["composer"],
      "matchPackageNames": ["php"],
      "enabled": false
    },
    {
      "groupName": "Infection packages",
      "matchDatasources": [
        "packagist"
      ],
      "matchPackagePatterns": [
        "^infection/infection$",
        "^roave/infection-static-analysis-plugin$"
      ]
    }
  ],
  "extends": [
    "group:phpstan"
  ]
}
